      <parameter>
        <bean class="org.jboss.deployment.FileNameVirtualFileFilter">
          <constructor>
            <parameter>
              <map keyClass="java.lang.String" valueClass="java.util.Set">
                <entry>
                  <key>jbossweb.sar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>console-mgr.sar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>jbossws.sar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>jmx-remoting.sar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>jboss-local-jdbc.rar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>jboss-xa-jdbc.rar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>jms-ra.rar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>mail-ra.rar</key>
                  <value><null/></value>
                </entry>
                <entry>
                  <key>quartz-ra.rar</key>
